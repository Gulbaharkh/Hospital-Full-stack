@model Final_Project.Identity.Models.EditModel
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit</h4>
                <form asp-action="Edit" class="forms-sample" method="post">
                    <input type="hidden" asp-for="Id" class="form-control">
                    <input type="hidden" asp-for="Username" class="form-control">
                    <input type="hidden" asp-for="IsAdmin" class="form-control">
                    <div class="form-group">
                        <label asp-for="Fullname"></label>
                        <input asp-for="Fullname" class="form-control">
                        <span class="text-danger" asp-validation-for="Fullname"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script
{
    <partial name="_ValidationPartial" />
    <script src="https://cdn.ckeditor.com/ckeditor5/27.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}