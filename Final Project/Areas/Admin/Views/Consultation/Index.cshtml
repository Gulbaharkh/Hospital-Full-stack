
@{
    ViewData["Title"] = "Consultation";
    List<Consultation> consultations = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Consultation</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Date
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    Doctor
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Consultation item in consultations)
                            {
                                <tr>
                                    <td>
                                        @item.Date
                                    </td>
                                    <td>
                                        @item.Doctor
                                    </td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
