
@{
    ViewData["Title"] = "Counter";
    List<Counter> counters = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Counter</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Item
                                </th>
                                <th>
                                    Count
                                </th>
                                <th>
                                    Edit
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Counter item in counters)
                            {
                                <tr>
                                    <td>
                                        @item.Item
                                    </td>
                                    <td>
                                        @item.Count
                                    </td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
