@model Doctor
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create</h4>
                <form asp-action="Update" class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Image"></label>
                        <input asp-for="Image" class="form-control">
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Department"></label>
                        <textarea asp-for="Department"></textarea>
                        <span class="text-danger" asp-validation-for="Department"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Facebook"></label>
                        <input asp-for="Facebook" class="form-control">
                        <span class="text-danger" asp-validation-for="Facebook"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Twitter"></label>
                        <input asp-for="Twitter" class="form-control">
                        <span class="text-danger" asp-validation-for="Twitter"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Linkedin"></label>
                        <input asp-for="Linkedin" class="form-control">
                        <span class="text-danger" asp-validation-for="Linkedin"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Instagram"></label>
                        <input asp-for="Instagram" class="form-control">
                        <span class="text-danger" asp-validation-for="Instagram"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script
{
    <partial name="_ValidationPartial" />
    <script src="https://cdn.ckeditor.com/ckeditor5/27.1.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}