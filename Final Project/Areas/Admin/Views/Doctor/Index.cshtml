@model List<Doctor>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Doctor</h4>
                <a asp-controller="Doctor" asp-action="Create" class="btn btn-success">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Department
                                </th>
                                <th>
                                    Facebook
                                </th>
                                <th>
                                    Twitter
                                </th>
                                <th>
                                    Linkedin
                                </th>
                                <th>
                                    Instagram
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Doctor item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/slider/@item.Image" style="width:100px;height:100px;object-fit: cover;" alt="Alternate Text" />
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @Html.Raw(@item.Department)
                                    </td>
                                    <td>
                                        @item.Facebook
                                    </td>
                                    <td>
                                        @item.Twitter
                                    </td>
                                    <td>
                                        @item.Linkedin
                                    </td>
                                    <td>
                                        @item.Instagram
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">
                                            <i class="mdi mdi-information-outline"></i>
                                        </a>
                                        <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete-sweep"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
